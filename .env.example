# === Postgres Database ===
# Замените на реальную строку подключения к Postgres.
# Пример для локального: postgresql://user:password@localhost:5432/shopbot
# Пример для Render/Heroku: postgres://user:password@host:5432/dbname
DATABASE_URL=postgresql://user:password@localhost:5432/shopbot

# === Telegram Bot ===
# Токен от @BotFather
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
# ID канала для постов (например: -1002566537425)
POST_CHANNEL_ID=YOUR_CHANNEL_ID

# === Flask ===
# Секретный ключ для Flask сессий (сгенерируйте свой!)
# Пример: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=YOUR_SECRET_KEY_HERE

# === Admin ===
# Telegram ID админа (получите через @userinfobot)
ADMIN_TELEGRAM_ID=YOUR_ADMIN_ID
ADMIN_NAME=AdminName

# === Optional: JWT/Encryption (если используете) ===
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# === Optional: Bot Config ===
BOT_USERNAME=YourBotUsername
BOT_NAME=Shop Bot
CURRENCY=USD
CURRENCY_SYMBOL=$
SUPPORT_PHONE=+000000000
SUPPORT_TELEGRAM=@YourSupportBot

# === Environment ===
ENVIRONMENT=production
FLASK_DEBUG=0
PORT=5000
